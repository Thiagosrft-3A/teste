let nomes = ["Tatuagem", "tatu", "tinta"];

function setup() {
  createCanvas(400, 400);
}

function draw() {
  background("white");
  fill("black");
  textSize(64);
  textAlign(CENTER, CENTER);

  // Escolher um nome aleatoriamente
  let indice = floor(random(nomes.length));
  let palavraX = nomes[indice];

  // Exibir o texto parcial baseado na posição do mouse
  let quantidadeX = map(mouseX, 0, width, 1, palavraX.length);
  let parcialX = palavraX.substring(0, quantidadeX);
  text(parcialX, 200, 200);
}
